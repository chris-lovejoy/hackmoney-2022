{
  "name": "hardhat-project",
  "scripts": {
    "compile": "hardhat compile --force",
    "test": "hardhat test --network hardhat",
    "clean": "hardhat clean && yarn shx rm -rf './generated/deployments' && yarn shx rm -rf './generated/cache'",
    "node": "hardhat node --network hardhat --no-deploy",
    "deploy": "hardhat --network localhost deploy --reset --write true --export-all ../app/src/generated/hardhat_contracts.json",
    "deploy:mumbai": "hardhat --network matic deploy --reset --write true --export-all ../app/src/generated/hardhat_contracts.json",
    "deploy:arbitrum_rinkeby": "hardhat --network arbitrum_rinkeby deploy --reset --write true --export-all ../app/src/generated/hardhat_contracts.json",
    "deploy:emerald-test": "hardhat --network emerald_testnet deploy --reset --write true --export-all ../app/src/generated/hardhat_contracts.json"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.6",
    "hardhat": "^2.9.3",
    "hardhat-deploy": "^0.11.4",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "shx": "^0.3.4",
    "typechain": "^8.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.6"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0"
  }
}
